# Build the docker image with `npx nx docker-build admins`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t admins`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system admins && \
          adduser --system -G admins admins

COPY dist/apps/admins admins
RUN chown -R admins:admins .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix admins --omit=dev -f install

CMD [ "node", "admins" ]
