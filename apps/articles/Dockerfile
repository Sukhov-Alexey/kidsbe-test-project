# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build articles`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t articles`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system articles && \
          adduser --system -G articles articles

COPY dist/apps/articles articles
RUN chown -R articles:articles .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix articles --omit=dev -f install

CMD [ "node", "articles" ]
